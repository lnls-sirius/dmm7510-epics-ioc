########################################################################
# Current Measurement Range
#
# Desc: Measurement range selection.

# ######################################
# This db defines a !! FIXED RANGE !!
#
# for use with a device with range fixed
# by hardware
# ######################################

# DCCT Range selection
record(longout, "$(P)$(R)Range-Cte"){
  field(ASG, "Reserved")
  field(DESC, "DCCT range option constant")
  field(VAL, "2")
}

record(mbbo, "$(P)$(R)Range-Sel"){
  field(ASG, "Reserved")
  field(DESC, "Fixed DCCT range")
#  field(ZRST, "20 A")
#  field(ONST, "2 A")
  field(TWST, "200 mA")
  field(VAL, "2")
#  field(THST, "20 mA")
  field(OMSL, "closed_loop")
  field(DOL, "$(P)$(R)Range-Cte")
  field(UNSV, "MAJOR")
  field(IVOA, "Don't drive outputs")
  field(OUT, "$(P)$(R)ConvCalcGetMode.PROC PP")
}

########################################################################
# DCCT Calibration Setting
#
# Desc: DCCT calibration signal enable.

# ######################################
# This db DISABLES THE TEST FUNCTION
#
# for use with a device with range fixed
# by hardware
# ######################################

# Enable/disable DCCT calibration signal
record(longout, "$(P)$(R)Test-Cte"){
  field(ASG, "Reserved")
  field(DESC, "Test option constant")
  field(VAL, "0")
}

record(mbbo, "$(P)$(R)Test-Sel"){
  field(ASG, "Reserved")
  field(DESC, "DCCT calibration signal enable")
  field(ZRST, "OFF")
#  field(ONST, "ON")
  field(OMSL, "closed_loop")
  field(DOL, "$(P)$(R)Test-Cte")
  field(UNSV, "MAJOR")
  field(IVOA, "Don't drive outputs")
  field(OUT, "$(P)$(R)TestCalc.PROC PP")
}

